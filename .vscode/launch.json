			"mode": "debug",
			"program": "${file}"
		},
		{
			"name": "Run engine",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceRoot}/cmd/lengine",
			"console": "integratedTerminal",
			"args": ["start", "-s", "~/.lisk/dpos-mainchain/tmp/sockets/abi.ipc", "-c", "${workspaceRoot}/cmd/debug/app/config.json"]
