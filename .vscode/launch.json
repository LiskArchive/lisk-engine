		{
			"name": "Run test app",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceRoot}/cmd/debug/app",
			"args": ["start"]
		},
		{
			"name": "Run test pubsub",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceRoot}/cmd/debug/p2p/v2/pubsub",
			"args": []
		},
		{
			"name": "Run glisk",
			"type": "go",
			"request": "launch",
			"mode": "debug",
			"program": "${workspaceRoot}/cmd/glisk"
		}
	]
